<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Choose your user kind right below"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_useradd_coyote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_useradd_coyote" />

            <RadioButton
                android:id="@+id/rb_useradd_roadrunner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_useradd_roadrunner" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_useradd_email"
        android:textColor="@color/green" />

    <EditText
        android:id="@+id/et_useradd_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/bt_useradd_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_useradd_create" />

</LinearLayout>